extends app

block card
  section(class='flashcards')
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2 #{card.getText(side)}
        p.hint
          i= card.hint
      .card-flip-wrap     
        a(href=`${card.id}?side=${card.getFlip(side)}`) 
            img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href='/cards')
          img(src="/static/img/next.svg")
    script(src='/static/js/app.js')
      
    